<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="400dip"
    android:layout_height="280dip"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/dialogname"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_modifypwd_user"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_dialog_left"
            android:layout_marginTop="@dimen/login_dialog_top"
            android:hint="User name"
            android:text="test1"
            android:inputType="number|phone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialognum"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_modifypwd_pwd"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_dialog_left"
            android:layout_marginTop="@dimen/login_dialog_top"
            android:hint="New password" />

    </LinearLayout>

    <Button
        android:id="@+id/dialog_modifypwd_sure"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/login_dialog_top"
        android:layout_marginLeft="@dimen/login_dialog_left2"
        android:background="@drawable/bg_event_detail_action_pressed"
        android:text="Submit"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/dialog_modifypwd_cancel"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/login_dialog_top"
        android:layout_marginLeft="@dimen/login_dialog_left2"
        android:background="@drawable/btn_feed_attention_click"
        android:text="Cancel"
        android:textColor="@color/White" />

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>