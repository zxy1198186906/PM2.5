<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/register_top_layout"
        style="@style/main_top_bg_style">

        <TextView
            android:id="@+id/textView1"
            style="@style/main_top_center_style"
            android:text="User Register" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/register_top_layout"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/register_bottom_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/register_center_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:text="User registration information is employed for environmental health research conducted by our company and its cooperation units. Volunteers participating in the study are suggested to register after receiving invitation code"/>

                <TextView
                    android:layout_below="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="General users do not have to register (non-registered user share same functions with the registered)"/>
            </RelativeLayout>

            <TextView
                android:layout_below="@+id/register_center_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invitation Code"
                android:id="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dip"
                android:layout_marginLeft="20dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_invite_code"
                android:minWidth="200dip"
                android:layout_toRightOf="@+id/textView2"
                android:layout_marginLeft="30dip"
                android:layout_alignBaseline="@+id/textView2"
                android:numeric="integer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User name"
                android:id="@+id/textView3"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_username"
                android:minWidth="200dip"
                android:layout_toRightOf="@+id/textView3"
                android:layout_marginLeft="60dip"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_below="@id/register_invite_code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_password"
                android:minWidth="200dip"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignLeft="@+id/register_username"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_below="@id/register_username"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Confirm password"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_confirm_pwd"
                android:minWidth="200dip"
                android:layout_toRightOf="@+id/textView5"
                android:layout_alignLeft="@+id/register_password"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_below="@id/register_password"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_gender_male"
                android:text="Male"
                android:layout_toRightOf="@+id/textView6"
                android:layout_alignLeft="@+id/register_confirm_pwd"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_below="@id/register_confirm_pwd" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_gender_female"
                android:text="Female"
                android:layout_toRightOf="@+id/register_gender_male"
                android:layout_marginLeft="20dip"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_below="@id/register_confirm_pwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_lastname"
                android:minWidth="60dip"
                android:layout_alignLeft="@+id/register_confirm_pwd"
                android:layout_alignBaseline="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name"
                android:id="@+id/textView7_2"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_firstname"
                android:minWidth="60dip"
                android:layout_alignLeft="@+id/register_lastname"
                android:layout_alignBaseline="@+id/textView7_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7_2"
                android:layout_alignLeft="@+id/textView7_2"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_phone"
                android:minWidth="200dip"
                android:layout_alignLeft="@+id/register_lastname"
                android:layout_alignBaseline="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_marginTop="30dip"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_mail"
                android:minWidth="200dip"
                android:layout_alignLeft="@+id/register_lastname"
                android:layout_alignBaseline="@+id/textView9" />
        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/register_bottom_layout"
        style="@style/main_top_bg_style"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/register_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:textSize="20sp"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/register_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:textSize="20sp"
            android:textColor="@color/White" />
    </RelativeLayout>
</RelativeLayout>