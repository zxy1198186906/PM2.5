<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <ScrollView
     android:id="@+id/notification_scrollview"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_above="@+id/notification_cancel"
     android:layout_marginBottom="6dp"
     android:fillViewport="false">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_app_name"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_title"
        android:id="@+id/textView2"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_para_1"
        android:id="@+id/textView3"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_para_2"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView3"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_para_3"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView4"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_para_4"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView5"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_para_5"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView6"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_para_6"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textView7"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17sp" />

   </RelativeLayout>

 </ScrollView>

    <Button
        android:id="@+id/notification_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不同意并退出"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dip"
        android:layout_marginBottom="20dip" />

    <Button
        android:id="@+id/notification_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同意以上内容"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dip"
        android:layout_marginBottom="20dip" />


</RelativeLayout>